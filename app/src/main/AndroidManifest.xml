<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.victor.tcc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TaskAtHand"
        android:exported="true"
        android:timePickerMode="spinner"
        android:calendarViewShown="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.br.tcc.controllers.ActivityMain">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>





        <activity android:name="com.br.tcc.controllers.Register"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.br.tcc.controllers.HomePage" />
        <activity android:name="com.br.tcc.controllers.Profile"
            />
        <activity android:name="com.br.tcc.controllers.Time" />
        <activity android:name="com.br.tcc.controllers.AddTask" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>